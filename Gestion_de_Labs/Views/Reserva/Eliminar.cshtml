@model Gestion_de_Labs.Models.Reservacion
@{
    ViewData["Title"] = "Eliminar Reserva";
}

<h2>Eliminar Reserva</h2>

<form asp-action="Eliminar" asp-route-id="@Model.Reserva_Id" method="post">
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-body">
            <p><strong>Usuario:</strong> @Model.Usuario?.Nombre</p>
            <p><strong>Laboratorio:</strong> @Model.Laboratorio?.Nombre</p>
            <p><strong>Fecha:</strong> @Model.Fecha</p>
            <p><strong>Hora:</strong> @Model.Hora</p>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

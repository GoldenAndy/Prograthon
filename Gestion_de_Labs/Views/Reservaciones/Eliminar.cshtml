@model Gestion_de_Labs.Models.Reservacion
@{
    ViewData["Title"] = "Eliminar Reserva";
}

<h2>Eliminar Reserva</h2>
<h4>¿Está seguro que desea eliminar esta reserva?</h4>

<div class="border p-3 mt-3">
    <p><b>Usuario:</b> @Model.Usuario?.Nombre</p>
    <p><b>Laboratorio:</b> @Model.Laboratorio?.Nombre</p>
    <p><b>Fecha:</b> @Model.Fecha.ToShortDateString()</p>
    <p><b>Hora:</b> @Model.Hora</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Reserva_Id" />
    <button type="submit" class="btn btn-danger mt-3">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>

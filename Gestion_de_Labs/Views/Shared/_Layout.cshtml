@{
    var ctrl = (string)ViewContext.RouteData.Values["controller"] ?? "";
    var act = (string)ViewContext.RouteData.Values["action"] ?? "";
    bool IsActive(string c, string? a = null)
        => string.Equals(ctrl, c, StringComparison.OrdinalIgnoreCase)
           && (a is null || string.Equals(act, a, StringComparison.OrdinalIgnoreCase));
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Gestion_de_Labs</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gestion_de_Labs.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-fide-blue shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">
                    Gestion_de_Labs
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Abrir menú">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(IsActive("Home", "Index") ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(IsActive("Reserva") ? "active" : "")"
                               asp-area="" asp-controller="Reserva" asp-action="Index">
                                Reserva
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(IsActive("Laboratorio") ? "active" : "")"
                               asp-area="" asp-controller="Laboratorio" asp-action="Index">
                                <i class="bi bi-flask me-1"></i>Laboratorios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(IsActive("Home", "Privacy") ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Privacy">
                                Privacy
                            </a>
                        </li>
                    </ul>

                    <!-- Botón/etiqueta discreta en amarillo -->
                    <span class="badge bg-fide-yellow text-dark fw-semibold">
                        UFID · Demo
                    </span>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top small text-muted py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <span>© @DateTime.Now.Year - Gestion_de_Labs</span>
            <a class="link-secondary" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

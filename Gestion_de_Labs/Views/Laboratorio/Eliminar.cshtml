@model Gestion_de_Labs.Models.Laboratorio

@{
    ViewData["Title"] = "Eliminar Laboratorio";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<div class="container mt-5">

    <div class="card shadow-sm">
        <div class="card-header text-white" style="background-color:#0033A0;">
            <h3 class="mb-0">
                <i class="bi bi-exclamation-triangle-fill text-warning"></i>
                Confirmar eliminación
            </h3>
        </div>

        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <strong>Atención:</strong> Estás a punto de eliminar el siguiente laboratorio.
                Esta acción <strong>no se puede deshacer</strong>.
            </div>

            <dl class="row">
                <dt class="col-sm-3 fw-semibold">ID:</dt>
                <dd class="col-sm-9">@Model.Laboratorio_Id</dd>

                <dt class="col-sm-3 fw-semibold">Nombre:</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3 fw-semibold">Capacidad:</dt>
                <dd class="col-sm-9">@Model.Capacidad</dd>

                <dt class="col-sm-3 fw-semibold">Responsable:</dt>
                <dd class="col-sm-9">@Model.Responsable</dd>
            </dl>

            <form asp-action="Eliminar" method="post">
                <input type="hidden" asp-for="Laboratorio_Id" />

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancelar
                    </a>

                    <button type="submit" class="btn text-white" style="background-color:#C70000;">
                        <i class="bi bi-trash"></i> Eliminar Laboratorio
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}

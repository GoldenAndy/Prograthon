@model Gestion_de_Labs.Models.Laboratorio

@{
    ViewData["Title"] = "Editar Laboratorio";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<div class="container mt-5">

    <div class="card shadow-sm">
        <div class="card-header text-white" style="background-color:#0033A0;">
            <h3 class="mb-0">
                <i class="bi bi-pencil-square"></i> Editar Laboratorio
            </h3>
        </div>

        <div class="card-body">
            <form asp-action="Editar" method="post" class="needs-validation" novalidate>

                <input type="hidden" asp-for="Laboratorio_Id" />

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label fw-semibold">Nombre del Laboratorio</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ej: Laboratorio de Electrónica" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Capacidad" class="form-label fw-semibold">Capacidad</label>
                    <input asp-for="Capacidad" type="number" class="form-control" placeholder="Ej: 30" required />
                    <span asp-validation-for="Capacidad" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Responsable" class="form-label fw-semibold">Responsable</label>
                    <input asp-for="Responsable" class="form-control" placeholder="Ej: Ing. Pablo Rodríguez" required />
                    <span asp-validation-for="Responsable" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Volver al listado
                    </a>

                    <button type="submit" class="btn text-white" style="background-color:#FFC400;">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}

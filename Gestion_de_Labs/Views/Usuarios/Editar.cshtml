@model Gestion_de_Labs.Models.Usuario
@{
    ViewData["Title"] = "Editar Usuario";
}

<h2 class="mb-4">Editar Usuario</h2>

<form asp-action="Editar" method="post" novalidate>
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <input type="hidden" asp-for="Usuario_Id" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Correo" class="form-label"></label>
        <input asp-for="Correo" class="form-control" type="email" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Tipo_Usuario_Id" class="form-label">Tipo de Usuario</label>
        <select asp-for="Tipo_Usuario_Id" asp-items="ViewBag.TiposUsuario" class="form-select"></select>
        <span asp-validation-for="Tipo_Usuario_Id" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

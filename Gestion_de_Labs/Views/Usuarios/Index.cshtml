@model IEnumerable<Gestion_de_Labs.Models.Usuario>

    <h2>Lista de Usuarios</h2>

    <p>
        <a asp-action="Crear" class="btn btn-primary">Crear</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Tipo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
{
            <tr>
                <td>@u.Usuario_Id</td>
                <td>@u.Nombre</td>
                <td>@u.Correo</td>
                <td>@(u.Tipo_Usuario_Nombre??u.Tipo_Usuario_Id.ToString())</td>
                <td class="text-nowrap">
                    <a asp-action="Editar" asp-route-id="@u.Usuario_Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@u.Usuario_Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
}
        </tbody>
    </table>
